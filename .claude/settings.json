{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": 300000,
    "BASH_MAX_TIMEOUT_MS": 300000
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -e '.' | $CLAUDE_PROJECT_DIR/scripts/git-command-filter.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/scripts/protect-files-edit.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/stop-hook.sh 1>&2"
          }
        ]
      }
    ]
  }
}
